# Database
DATABASE_URL=postgresql://user:password@localhost:5432/picscripter

# JWT & Security
JWT_SECRET=your-random-jwt-secret-here-min-32-chars
ENCRYPTION_KEY=your-32-byte-encryption-key-hex
SESSION_SECRET=your-session-secret-here

# OAuth Security
# Comma-separated list of allowed redirect URIs for OAuth callbacks
# If not set, defaults to CORS_ORIGIN
OAUTH_REDIRECT_ALLOWLIST=http://localhost:5000,https://yourdomain.com

# Optional: Versioned encryption keys for key rotation
# ENCRYPTION_KEY_V2=your-new-32-byte-encryption-key-hex
# When rotating keys:
# 1. Add new key as ENCRYPTION_KEY_V2
# 2. Keep old key as ENCRYPTION_KEY (for decrypting old tokens)
# 3. New tokens will use V2, old tokens still decrypt with V1

# Redis (for BullMQ job queue)
REDIS_URL=redis://localhost:6379

# CORS
CORS_ORIGIN=http://localhost:5000

# Feature Flags
# Enable pending scheduling - allows creating calendar entries before platforms are connected
# When "true", users can schedule to multiple platforms even before connecting them
# When "false" or unset, scheduling requires connected platforms (default/legacy behavior)
# 
# ⚠️  IMPORTANT FOR REPLIT USERS:
# Set these through Tools > Secrets in the left sidebar (not in this .env file)
# Set both to exactly "true" (lowercase) to enable the feature:
#   FEATURE_SCHEDULE_PENDING=true
#   VITE_FEATURE_SCHEDULE_PENDING=true
#
# FEATURE_SCHEDULE_PENDING=true
# VITE_FEATURE_SCHEDULE_PENDING=true

# Enable interactive calendar UI - clickable day cells with schedule drawer and status dots
# When "true", users can click calendar days to open a scheduling drawer and see status dots
# When "false" or unset, calendar shows posts but day cells are not interactive (default)
# FEATURE_SCHEDULE_UI=false
# VITE_FEATURE_SCHEDULE_UI=false

# Instagram (via Facebook)
INSTAGRAM_CLIENT_ID=your-instagram-client-id
INSTAGRAM_CLIENT_SECRET=your-instagram-client-secret

# TikTok
TIKTOK_CLIENT_KEY=your-tiktok-client-key
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret

# Twitter/X
TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret

# LinkedIn
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Pinterest
PINTEREST_APP_ID=your-pinterest-app-id
PINTEREST_APP_SECRET=your-pinterest-app-secret

# YouTube (via Google)
YOUTUBE_CLIENT_ID=your-youtube-client-id
YOUTUBE_CLIENT_SECRET=your-youtube-client-secret

# Facebook
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Object Storage (auto-configured by Replit)
# These are set automatically when you create an object storage bucket
DEFAULT_OBJECT_STORAGE_BUCKET_ID=your-bucket-id
PUBLIC_OBJECT_SEARCH_PATHS=/your-bucket-id/public
PRIVATE_OBJECT_DIR=/your-bucket-id/.private

# File Upload Limits
# MAX_UPLOAD_SIZE=10485760  # 10MB in bytes (hardcoded in server/objectStorage.ts)
